<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jh.circularlist.ExampleActivity">

    <Button
        android:id="@+id/bt_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove item"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_add_item"
        android:layout_toRightOf="@id/bt_remove_item"
        android:layout_toEndOf="@id/bt_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add item"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_enlarge_radius"
        android:layout_toRightOf="@id/bt_add_item"
        android:layout_toEndOf="@id/bt_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enlarge radius"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/bt_reduce_radius"
        android:layout_toRightOf="@id/bt_enlarge_radius"
        android:layout_toEndOf="@id/bt_enlarge_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="small radius"
        android:textAllCaps="false"/>



    <com.jh.circularlist.CircularListView
        android:layout_centerInParent="true"
        android:id="@+id/my_circular_list"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/circle_background"
        />
</RelativeLayout>
